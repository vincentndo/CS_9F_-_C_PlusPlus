#include<iostream>
using namespace std;

int main()
{
  int a, count = 0 ;
  int subtotal = 0, total = 0;

  cout << "Enter integers: "<< endl;
  cin >> a;
  while (count != 2)
    {
      if (a=0)
	{
	  count = count + 1;
	  cout << subtotal;
	  subtotal =0;
	  if (count == 2)
	    {
	      cout << total;
	    }	  
	}
      else
	{
	  subtotal = subtotal + a;
	  total = total + a;
	  count = 0;
	  cin >> a;
	}
    }
  return 0;
}
